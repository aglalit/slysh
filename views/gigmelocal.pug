extends layout
block content
  link(rel='stylesheet', href='/css/gigme.css')
  div(ng-app='gigme')
    button#run Запустить
    div(id="controls")
      div
        a.play(onclick="playButton()") play
        div(id="tempoBox") Tempo:
          span(id="showTempo") 120
          input(id="tempo" type="range" min="20.0" max="160.0" step="1" value="120" style="height: 20px; width: 200px" onInput="tempo = event.target.value; document.getElementById('showTempo').innerText=tempo;")
        div Resolution:
          select(onchange="noteResolution = this.selectedIndex;")
            option 16th notes
            option 8th notes
            option Quarter notes

      source(src="/assets/romantic-collection-samples/1solodowhiskey....mp3")
  //- script(src="bower_components/Wad/build/wad.min.js")
  script(src="/js/vendor/tuna.min.js")
  script(src="/js/gigme.js")
